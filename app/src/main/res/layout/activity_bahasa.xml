<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#0D1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bahasaActivity">

    <!--    tittle-->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Bahasa Pemrograman Yang Diinginkan"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <!--    cardView python-->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewPython"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#2D3748"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp">

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:src="@drawable/logo_python" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dasar - Dasar Pemrograman Python"
                    android:textColor="#22D3EE"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="5 Soal mengenai dasar pemrograman python"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    cardView kotlin-->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewKotlin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#2D3748"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/CardViewPython"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_kotlin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:text="Dasar - Dasar Pemrograman Kotlin"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#22D3EE"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <TextView
                    android:text="5 Soal mengenai dasar pemrograman Kotlin"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    cardView PHP-->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewPhp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#2D3748"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/CardViewKotlin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_php"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:text="Dasar - Dasar Pemrograman PHP"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#22D3EE"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <TextView
                    android:text="5 Soal mengenai dasar pemrograman PHP"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>