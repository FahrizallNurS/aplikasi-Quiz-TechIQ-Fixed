<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0C15">

    <!-- Icon roket -->
    <ImageView
        android:id="@+id/iv_rocket"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Icon Roket"
        android:src="@drawable/ic_rocket"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card total skor -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_total_skor"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_blue_light"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_rocket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Isi card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/bg_gradient_card_blue">

            <!-- Label "Total Skor" -->
            <TextView
                android:id="@+id/tv_total_skor_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Skor"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Skor angka besar -->
            <TextView
                android:id="@+id/tv_total_skor_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFFFF"
                android:textSize="56sp"
                android:textStyle="bold"
                android:layout_below="@id/tv_total_skor_label"
                android:layout_marginTop="0dp" />

            <!-- Label poin Terkumpul -->
            <TextView
                android:id="@+id/tv_poin_terkumpul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poin Terkumpul"
                android:textColor="#AAFFFFFF"
                android:textSize="14sp"
                android:layout_below="@id/tv_total_skor_number"
                android:layout_marginTop="4dp" />

            <!-- Icon trophy-->
            <ImageView
                android:id="@+id/iv_trophy"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="Trophy Icon"
                android:src="@drawable/ic_trophy"
                android:background="@drawable/trophy_border"
                android:padding="12dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button Mulai Kuis -->
    <Button
        android:id="@+id/btn_mulai_kuis"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Mulai Kuis"
        android:textColor="#1E90FF"
        android:background="@drawable/button_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/card_total_skor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@id/btn_keluar"
        android:layout_marginEnd="16dp"/>
    <!-- Button Keluar -->
    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Keluar"
        android:textColor="#1E90FF"
        android:background="@drawable/button_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/card_total_skor"
        app:layout_constraintStart_toEndOf="@id/btn_mulai_kuis"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"/>

    <!-- Baris 1 kiri -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_kategori_1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/btn_mulai_kuis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pilih_level" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/outline_card">

            <!-- Icon kategori -->
            <ImageView
                android:id="@+id/multiCategory"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icon kategori1"
                android:src="@drawable/multicategory" />

            <!-- Title kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Kategori"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Subtitle kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 kategori bahasa berbeda"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Baris 1 kanan -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pilih_level"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/btn_keluar"
        app:layout_constraintStart_toEndOf="@id/card_kategori_1"
        app:layout_constraintEnd_toEndOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/outline_card">

            <!-- Icon kategori -->
            <ImageView
                android:id="@+id/pilih_level"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icon kategori2"
                android:src="@drawable/pilih_level" />

            <!-- Title kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Level"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Subtitle kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 tingkat kesulitan"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Baris 2 kiri -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_kategori_3"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"

        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_kategori_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_kategori_4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/outline_card">

            <!-- Icon kategori -->
            <ImageView
                android:id="@+id/leadboard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icon kategori3"
                android:src="@drawable/ic_leadboard" />

            <!-- Title kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Kategori"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Subtitle kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 kategori berbeda"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Baris 2 kanan -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_kategori_4"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"

        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/pilih_level"
        app:layout_constraintStart_toEndOf="@id/card_kategori_3"
        app:layout_constraintEnd_toEndOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/outline_card" >

            <!-- Icon kategori -->
            <ImageView
                android:id="@+id/iv_icon_kategori4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Icon kategori4"
                android:src="@drawable/stats_record" />

            <!-- Title kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Kategori"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Subtitle kategori -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 kategori berbeda"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
