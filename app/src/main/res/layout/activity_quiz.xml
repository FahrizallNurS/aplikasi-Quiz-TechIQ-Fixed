<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#0E121B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizActivity">

    <!-- Nomor Soal -->
    <TextView
        android:id="@+id/txtNomorSoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/5"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Soal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuestion"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="14dp"
        app:cardBackgroundColor="#1D2534"
        app:layout_constraintTop_toBottomOf="@id/txtNomorSoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:id="@+id/txtPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pertanyaan"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:padding="16dp" />

    </androidx.cardview.widget.CardView>


    <!-- PILIHAN JAWABAN -->

    <!-- Opsi 1 -->
    <LinearLayout
        android:id="@+id/opsi1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_opsi"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/cardQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtOpsi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opsi 1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Opsi 2 -->
    <LinearLayout
        android:id="@+id/opsi2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_opsi"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/opsi1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtOpsi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opsi 2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Opsi 3 -->
    <LinearLayout
        android:id="@+id/opsi3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_opsi"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/opsi2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtOpsi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opsi 3"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- Opsi 4 -->
    <LinearLayout
        android:id="@+id/opsi4"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/background_opsi"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/opsi3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtOpsi4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opsi 4"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:padding="12dp"/>
    </LinearLayout>


    <!-- Tombol Next -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:text="Back"
        android:background="@drawable/rounded_background"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opsi4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_background"
        android:text="Next"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toBottomOf="@+id/opsi4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELESAI"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_background"
        android:textColor="@color/white"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>